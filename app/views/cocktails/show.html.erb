<h2><%= @cocktail.name %></h2>
<h3>Ingredients</h3>
<ul>
  <% @cocktail.ingredients.each do |i| %>
    <li><%= i.name %></li>
  <% end %>
</ul>
<h3>Doses</h3>
<ul>
  <% @cocktail.doses.each do |d| %>
    <li><%= d.description %></li>
    <%= link_to "Remove this dose", cocktail_dose_path(@cocktail, d), method: :delete %>
  <% end %>
</ul>

<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>
